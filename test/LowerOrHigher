/* The guess API is defined in the parent class GuessGame.
   @param num, your guess
   @return -1 if my number is lower, 1 if my number is higher, otherwise return 0
      int guess(int num); */

public class Solution extends GuessGame {
    public int guessNumber(int n) {
        int guessed;
        int low = 1;
        int high = n;
        int mid, guessed;
        while (true) {
        	mid = low + (high-low)>>1;
        	flag = guess(mid);
        	if (flag == 0) {
        		guessed = mid;
        		break;
        	} else if (flag == 1) {
        		high = mid - 1;
        	} else if (flag == -1) {
        		low = mid + 1;
        	}

        	if(low >= high) {
        		guessed = mid;
        		break;
        	}
        }

        return guessed;
    }
}